<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="edu.cs.scu.dao.PropertyDao">
    <resultMap id="TaskResultMap" type="PropertyBean">
        <result column="property_id" property="propertyId"/>
        <result column="visit_cycle" property="visitCycle"/>
        <result column="visit_range" property="visitRange"/>
        <result column="activity_degree" property="activityDegree"/>
        <result column="visit_time_split" property="visitTimeSplit"/>
        <result column="property_type" property="propertyType"/>
    </resultMap>

    <parameterMap id="TaskParameterMap" type="PropertyBean">
        <parameter property="propertyId" jdbcType="INTEGER" resultMap="TaskResultMap"/>
        <parameter property="visitCycle" jdbcType="VARCHAR" resultMap="TaskResultMap"/>
        <parameter property="visitRange" jdbcType="INTEGER" resultMap="TaskResultMap"/>
        <parameter property="activityDegree" jdbcType="VARCHAR" resultMap="TaskResultMap"/>
        <parameter property="visitTimeSplit" jdbcType="VARCHAR" resultMap="TaskResultMap"/>
        <parameter property="propertyType" jdbcType="INTEGER" resultMap="TaskResultMap"/>
    </parameterMap>

    <select id="getPropertyById" resultMap="TaskResultMap">
        SELECT *
        FROM property
        WHERE property_id = #{0}
    </select>

</mapper>